{
  "author": "<stwindfy@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap",
    "clean": "lerna run clean",
    "build": "lerna run build --sort",
    "test": "jest --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "test/.*(test|spec)\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "browserslist": [
    ">2%",
    "last 1 edge versions",
    "not ie > 0",
    "not op_mini all"
  ],
  "devDependencies": {
    "lerna": "^3.4.3",
    "parcel-bundler": "^1.10.3",
    "rimraf": "^2.6.2",
    "typescript": "^3.1.3"
  }
}
